{
  "manifest_version": 2,
  "name": "Article filter",
  "description": "A simple filtering extension that blocks articles by keywords or regular expressions",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
    "default_popup": "options.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "img/icon128.png"
  ]
}
