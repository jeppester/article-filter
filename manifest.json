{
  "manifest_version": 2,
  "name": "Article filter",
  "description": "A simple filtering extension that blocks articles by keywords or regular expressions",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon48.png",
      "38": "img/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/index.js"]
    }
  ],
  "web_accessible_resources": [
    "img/icon128.png"
  ]
}
